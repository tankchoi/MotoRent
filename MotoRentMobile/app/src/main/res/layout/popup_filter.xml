<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="Lọc theo loại xe"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox android:id="@+id/cbVision" android:text="Vision" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    <CheckBox android:id="@+id/cbAirBlade" android:text="Air Blade" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <Button
        android:id="@+id/btnApplyFilter"
        android:text="Áp dụng"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
