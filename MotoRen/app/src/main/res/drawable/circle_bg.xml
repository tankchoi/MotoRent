<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền -->
    <solid android:color="@android:color/transparent" />

    <!-- Viền màu nhạt -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Màu xám nhạt -->

    <!-- Bo góc -->
    <corners android:radius="50dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
